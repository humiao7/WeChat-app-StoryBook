.edit-page {
  background-color: #fff;
}

.title {
  width: 100%;
  padding: 20rpx 0;
  color: #000;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  border-bottom: 1px solid #efefef;
}

.content-caves{
  min-height: 500rpx;
  padding: 0 20rpx 20rpx 20rpx;
}

.contents {
  height: 100%;
  width: 100%;
