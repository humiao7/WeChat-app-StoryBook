/**index.wxss**/

.broadcast {
  width: 100%;
}

image {
  width: 100%;
}

.test {
  width: 100%;
  direction: column;
}

.li {
  padding: 10px;
  display: flex;
  justify-content: space-between;
  min-height: 100px;
  background-color: #fff;
  border-bottom: 1px solid #b8b8b8;
}

.header {
  width: 250rpx;
  height: 250rpx;
  margin-right: 20rpx;
}

.description {
  height: 250rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
}

.title {
  height: 40rpx;
  line-height: 40rpx;
  margin-bottom: 10rpx;
  text-align: left;
  overflow: hidden;
  font-weight: bold;
  text-overflow: ellipsis;
}

.centent {
  font-size: 30rpx;
  text-align: left;
  overflow: hidden;
  flex: 1;
  text-overflow: ellipsis;
}

.time {
  font-size: 25rpx;
  line-height: 40rpx;
  text-align: right;
  margin-top: 10rpx;
  color: #8a8a8a;
}

.add-area {
  position: fixed;
  right: 80rpx;
  bottom: 70rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background-color: #fff;
}

.add-tab {
  width: 90rpx;
  height: 90rpx;
}
